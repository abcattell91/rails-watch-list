<div class="container p-5 m-5 shadow bg-white rounded">
<h1 class="text-center"><%= @list.name %></h1>

<div class="row row-cols-1 row-cols-md-3 mt-3">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="col-md-4 mb-4">
    <div class="card h-100 img-thumbnail mb-2" style="">
        <img class="card-img-top img-thumbnail" src="<%=bookmark.movie.poster_url%>">
      <div class="card-body">
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <hr>
        <p class="card-text">Comments: <br><%= bookmark.comment %></p>
      </div>
<%= link_to 'Remove', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %>
    </div>
  </div>
  <% end %>
</div>

<%= link_to 'Back', lists_path %>
<%= link_to 'Add Movie', new_list_bookmark_path(@list) %>

</div>
