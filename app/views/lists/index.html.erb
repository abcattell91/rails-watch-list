<div class="container p-5 m-5 shadow bg-white rounded">
  <h1 class="text-center">Welcome to the Movie Lists</h1>
  <h4 class="text-end sticky-top"><%= link_to 'Create a Movie list', new_list_path %></h4>
  <div class="row row-cols-1 row-cols-md-3 mt-3">
    <% @lists.each do |list| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 img-thumbnail mb-2" style="">
          <img class="card-img-top img-thumbnail" src="#">
        <div class="card-body">
          <div class="card-title"><h5><%= list.name%></h5></div>
          <%= link_to 'View', list_path(list) , class: "flat-info btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
